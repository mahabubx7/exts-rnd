{
  "compilerOptions": {
    "lib": ["ES5", "ES6", "ESNext"],
    "target": "ES2020",
    "module": "CommonJS",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "baseUrl": ".",
    "rootDir": "./",
    "paths": {
      "~/src": ["src/routes"],
      "@core/*": ["core/*"], // never change it if u don't know
      "@app/*": ["src/apps/*"],
      "@guard": ["src/guards"]
    }
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src", "core", "tests"]
}
